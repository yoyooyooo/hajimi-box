{
  "name": "hajimi-box-monorepo",
  "private": true,
  "packageManager": "bun@1.2.17",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:box": "bun run --filter box tauri dev",
    "build:box": "bun run --filter box tauri build",
    "dev": "bun run dev:box",
    "build": "bun run build:box",
    "clean": "bun run clean:deps && bun run clean:dist",
    "clean:deps": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'target' -type d -prune -exec rm -rf '{}' +",
    "clean:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "install:all": "bun install"
  },
  "devDependencies": {
    "typescript": "^5.6.2"
  }
}
